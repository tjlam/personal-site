<div id="contact-form" class="container-fluid">
	<div class="row">
		<div class="col-md-4">
			<svg id="line2" width="107px" height="28px" viewBox="83 872 107 28" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
			    <!-- Generator: Sketch 42 (36781) - http://www.bohemiancoding.com/sketch -->
			    <desc>Created with Sketch.</desc>
			    <defs></defs>
			    <path d="M80,886 L80,886" id="P2" stroke="#191917" stroke-width="14" fill="none"></path>
			</svg>
			<div id="contact-header" class="contact-header header">
				<h2>Contact Me</h2>
			</div>
		</div>
	</div>
	

	<%= form_for @contact, :url => pages_path do |f| %> 
		<div class="row">
			<div class="form-group col-md-6">
				<%= f.text_field :name, class: 'form-control', placeholder: 'your name' %> 
			</div>
		
			<div class="form-group col-md-6">
				<%= f.email_field :email, class: 'form-control', placeholder: 'your email' %> 
			</div>
		</div>

		<div class="row">
			<div class="form-group col-md-12">
				<%= f.text_area :comments, class: 'form-control', placeholder: 'your message' %>
			</div>
		</div>

		<div class="row">
			<div class="col-md-1">
				<%= f.submit 'Submit', class: 'btn btn-default', id: 'submit-btn' %>
			</div>
		</div>
		
	<% end %>
 	
	 	
	
</div>

